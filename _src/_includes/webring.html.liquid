{% if site.data.webring.size > 0 %}
  <aside class="webring">
    <header>
      <h2>Articles from blogs I like :)</h2>
    </header>
    {% for article in site.data.webring %}
      <article>
        <header>
          <h3>
            <a href="{{ article.link }}">{{ article.title }}</a>
          </h3>
        </header>
        <p>
          {{ article.date | date: "%d/%m/%y" }}
          via <a href="{{ article.sourcelink }}">{{ article.sourcetitle }}</a>
        </p>
        <p>{{ article.summary }}</p>
      </article>
    {% endfor %}
    <p class="attribution">Generated by <a href="https://git.sr.ht/~sircmpwn/openring">openring</a></p>
  </aside>
{% endif %}
